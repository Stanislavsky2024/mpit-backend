generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  username String
  email    String @unique
  password String

  @@map("users")
}

model Category {
  id       String    @id @default(ulid())
  name     String
  products Product[]

  @@map("categories")
}

model Product {
  id          String   @id @default(ulid())
  name        String
  description String
  price       Int
  discount    Int
  imageUrl    String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  @@map("products")
}
