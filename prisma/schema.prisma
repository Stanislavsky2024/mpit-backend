generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  username String
  email    String    @unique
  password String
  role     Role
  reviews  Review[]
  products Product[]

  @@map("users")
}

model Review {
  id      String @id @default(ulid())
  rating  Int
  comment String
  userId  String
  user    User   @relation(fields: [userId], references: [id])

  @@map("reviews")
}

model Category {
  id            String        @id @default(ulid())
  name          String        @unique
  subcategories Subcategory[]

  @@map("categories")
}

model Subcategory {
  id           String    @id @default(ulid())
  name         String    @unique
  products     Product[]
  category     Category  @relation(fields: [categoryName], references: [name])
  categoryName String

  @@map("subcategories")
}

model Product {
  id              String      @id @default(ulid())
  name            String
  description     String
  price           Int
  discount        Int
  imageUrl        String
  subcategoryName String
  subcategory     Subcategory @relation(fields: [subcategoryName], references: [name])
  userId          String
  user            User        @relation(fields: [userId], references: [id])

  @@map("products")
}

enum Role {
  SELLER
  CUSTOMER
}
